<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 android:background="@color/btnred"
    android:orientation="vertical"
    android:id="@+id/relative">


    <TextView
        android:id="@+id/select_sem_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:textSize="30dp"
        android:textColor="@color/blue"
        android:text="Select Semester"
        android:textAlignment="center" />
<Spinner
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/time_table_spinner"
    android:layout_below="@id/select_sem_txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</Spinner>

    <Button
        android:layout_below="@id/time_table_spinner"
        android:layout_centerInParent="true"
        android:text="Submit"
        android:padding="10dp"
        android:background="@drawable/loginbutton_selector"
        android:layout_width="wrap_content"
        android:id="@+id/btn_see_time_table"
        android:layout_height="wrap_content" />
</RelativeLayout>

