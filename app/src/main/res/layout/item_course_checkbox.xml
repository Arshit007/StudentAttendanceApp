<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/checkbox_container"
>
<android.support.v7.widget.CardView
    android:id="@+id/cvItems"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    card_view:cardElevation="0dp"
    card_view:contentPadding="0dp"
    card_view:cardBackgroundColor="#FFFFFF"
    >

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/relativecvItems"

        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvContent"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="-8dp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/name_code_text"
            android:layout_toRightOf="@id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Course Code : "
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/name_code"
            android:layout_toRightOf="@id/name_code_text"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text=""
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_code"
            android:layout_alignStart="@+id/name_code"
            android:layout_marginStart="-129dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.8"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Course Name : "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/name_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-18dp"
            android:layout_toRightOf="@id/tvContent"
            android:layout_weight="0.8"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textSize="15dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>