<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/displayLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <!--android:adjustViewBounds="true"-->

        <RelativeLayout
            android:id="@+id/relativeLayout"

            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"

                android:padding="10dp"
                android:scaleType="center"
                android:text="Course Name :"
                android:textSize="25dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/course_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_toRightOf="@id/course_code_text"
                android:text=""
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/total_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:layout_below="@id/course_code"
                android:text="Total Classes: "
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/total_attend_value"
                android:layout_toRightOf="@id/total_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:text=" "
                android:layout_below="@id/course_code"
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />



            <TextView
                android:id="@+id/class_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/total_attend"
                android:text="Classes Attended"
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/class_attend_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_attend_value"
                android:layout_toRightOf="@id/class_attend"
                android:layout_marginLeft="0dp"
                android:scaleType="center"

                android:text="  "
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/percentage"
                android:layout_toRightOf="@id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:text="Percentage "
                android:layout_below="@id/class_attend_value"
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/percentage_value"
                android:layout_toRightOf="@id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:text=""
                android:layout_below="@id/class_attend_value"
                android:layout_marginTop="0dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />







            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/category_image"
                />

            <TextView
                android:id="@+id/id_Course"
                android:layout_width="0dp"
                android:layout_height="0dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>