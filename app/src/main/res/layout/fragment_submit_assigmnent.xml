<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/pink"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CourseRegister">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:padding="10dp"
        app:cardUseCompatPadding="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:visibility="visible">


            <Button
                android:layout_below="@id/spinner_assignment_no"
                android:text="Select Assignment Pdf"
                android:background="@color/input_register_bg"
                android:id="@+id/btnSelectPdf"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/txt_file_select"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btnSelectPdf"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:inputType="text"
                android:padding="10dp"
                android:text="Select File To Be Uploaded"
                android:textAlignment="center"
                android:background="@color/organge"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="15dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/txtSemesterAssign1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:inputType="text"
                android:padding="10dp"
                android:text="Select Semester"
                android:background="@color/black"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="italic|bold" />


            <Spinner
                android:id="@+id/SemesterspinnerAssign1"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/txtSemesterAssign"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:hint="Ex(BBA,BTech,MBA,MCA) "
                android:inputType="text"
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/txt_asign1"
                android:layout_width="match_parent"
                android:textColor="@color/pink"
                android:background="@color/blue"
                android:layout_height="wrap_content"
                android:layout_below="@id/SemesterspinnerAssign"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:padding="10dp"
                android:text="Select Course To see Assignment"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="italic|bold" />


            <Spinner
                android:id="@+id/CourseAsignspinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/txt_asign"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:hint="Ex(BBA,BTech,MBA,MCA) "
                android:inputType="text"
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/txt_assignment_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/CourseAsignspinner"
                android:layout_marginBottom="10dp"
                android:background="@color/btn_login_bg"
                android:fontFamily="serif"
                android:inputType="text"
                android:padding="10dp"
                android:text="Select Assigment To Be Submitted"
                android:textAlignment="center"
                android:textColor="@color/fbutton_color_green_sea"
                android:textSize="15dp"
                android:textStyle="italic|bold" />


            <Spinner
                android:id="@+id/spinner_assignment_no"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/txt_assignment_no"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="italic|bold" />




            <Button
                android:id="@+id/btnUploadPdf"
                android:text="Upload Assignment"

                android:fontFamily="serif"
                android:background="@color/yellow"
                android:layout_below="@+id/txt_file_select"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <ProgressBar
                android:id="@+id/progressBarAssign"
                android:layout_width="30dp"
                android:layout_centerInParent="true"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>